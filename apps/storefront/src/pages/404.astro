---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found | Storefront" description="The page you're looking for doesn't exist">
  <section class="mx-auto max-w-7xl px-4 py-24 sm:px-6 lg:px-8">
    <div class="text-center">
      <p class="text-base font-semibold text-blue-600">404</p>
      <h1 class="mt-4 text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
        Page not found
      </h1>
      <p class="mt-6 text-lg text-gray-600">
        Sorry, we couldn't find the page you're looking for.
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="/"
          class="rounded-md bg-blue-600 px-6 py-3 text-base font-medium text-white shadow-sm hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
        >
          Go back home
        </a>
        <a
          href="/products"
          class="text-base font-medium text-gray-700 hover:text-gray-900"
        >
          Browse products <span aria-hidden="true">&rarr;</span>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

